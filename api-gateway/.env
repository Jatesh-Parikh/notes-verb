# Server configuration
PORT=8080
NODE_ENV=development

# JWT configuration  (for token validation)
JWT_SECRET=mumbai-delhi-chennai-calcutta

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
NOTES_SERVICE_URL=http://localhost:3003
TAGS_SERVICE_URL=http://localhost:3004

# CORS configuration
# Frontend application URL
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging configuration
LOG_LEVEL=info

# Health Check configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# PRODUCTION EXAMPLES (uncomment and modify for production)
# =============================================================================

# Production JWT secret (generate a strong secret)
# JWT_SECRET=your-production-jwt-secret-256-bits-minimum

# Production service URLs (update with your production URLs)
# AUTH_SERVICE_URL=https://auth.your-domain.com
# USER_SERVICE_URL=https://users.your-domain.com
# NOTES_SERVICE_URL=https://notes.your-domain.com
# TAGS_SERVICE_URL=https://tags.your-domain.com

# Production CORS (restrict to your frontend domain)
# CORS_ORIGIN=https://your-frontend-domain.com

# Production logging
# LOG_LEVEL=warn


